{
  "info": {
    "name": "ComfyUI Test API",
    "description": "Postman collection để test ComfyUI API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Text2Image - Basic",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"prompt\": \"magazine cover photo of a black supermodel, full body shot, low angle view from her feet, wide-angle lens, watching the sunset, hyperrealistic, vogue style\",\n  \"width\": 832,\n  \"height\": 1280,\n  \"steps\": 8,\n  \"cfg\": 1.0,\n  \"batch_size\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:8000/text2image",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["text2image"]
        }
      }
    },
    {
      "name": "Text2Image - Custom Seed",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"prompt\": \"a beautiful landscape with mountains and lake, sunset, photorealistic\",\n  \"width\": 1024,\n  \"height\": 1024,\n  \"steps\": 12,\n  \"cfg\": 1.5,\n  \"seed\": 12345,\n  \"batch_size\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:8000/text2image",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["text2image"]
        }
      }
    },
    {
      "name": "Get Queue Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/queue",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["queue"]
        }
      }
    },
    {
      "name": "Get History (replace prompt_id)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/history/{{prompt_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["history", "{{prompt_id}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "prompt_id",
      "value": "your_prompt_id_here"
    }
  ]
}
